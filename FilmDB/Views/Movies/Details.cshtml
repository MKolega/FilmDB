@model FilmDB.Model.Movies
@{
    ViewData["Title"] = "Details";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.Image" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>@Model.Description</h3>
                            <h3>Director: @Model?.Director?.Name</h3>
                            <h3>Genre: @Model.Genre</h3>
                            <h3>Release Date: @Model.Year</h3>
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
