@model FilmDB.Model.Movies
@{
    ViewData["Title"] = "Adding a new movie";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Director</label>
                <input asp-for="Director.Name" class="form-control"/>
                <span asp-validation-for="Director.Name" class="text-danger"></span>
            <partial name="_CreateOrEdit" />
        </form>
    </div>
</div>