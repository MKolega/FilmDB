
@model FilmDB.Model.Director
@{
    ViewData["Title"] = "Details";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Directors</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.Image" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>@Model.Bio</h3>                           
                            <h3>List of movies:</h3>
                            <ul>
                                @foreach (var movie in Model.Movies)
                                {
                                    <li>
                                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.ID">@movie.Title</a>
                                    </li>
                                }
                            </ul>
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
